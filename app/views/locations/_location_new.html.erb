<div class="col-md-10">
    <div class="card">
      <div class="card-header text-secondary text-center">
        <%= @location.new_record? ? "新建地址" : "更新地址" %>
      </div>
      <div class="card-body">
        <%= render 'errors' %>
        <%= form_for(:location, 
                     url: (@location.new_record? ? locations_path : location_path(@location)), 
                     method: (@location.new_record? ? 'post' : 'put')) do |f| %>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary">姓名</label>
          <div class="col-sm-10">
            <%= f.text_field :contact_name, class: "form-control", placeholder: "必填" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary">手机号码</label>
          <div class="col-sm-10">
            <%= f.number_field :cellphone, class: "form-control", placeholder: "必填"%>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary">邮政编码</label>
          <div class="col-sm-10">
            <%= f.number_field :zipcode, class: "form-control", placeholder: "选填" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary">详细地址</label>
          <div class="col-sm-10">
            <%= f.text_area :address, class: "form-control", placeholder: "必填"%>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label"></label>
          <div class="col-sm-2">
            <%= f.submit (@location.new_record? ? "新建地址" : "更新地址"), class: "btn btn-primary btn-sm"%>
          </div>
        </div>
        <% end %>
      </div>
    </div>
</div>
